<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.compscieddy.meetinthemiddle.FontTextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="\@username"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="@dimen/map_size"
            android:layout_height="@dimen/map_size"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            tools:context="com.compscieddy.meetinthemiddle.MapsActivity"/>

        <com.compscieddy.meetinthemiddle.FontTextView
            android:id="@+id/new_group_button"
            android:layout_width="@dimen/map_size"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map"
            android:background="@drawable/rounded_outline_accent"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            android:text="@string/new_group"
            app:fontface="montserrat_semibold"/>

        <RelativeLayout
            android:id="@+id/bottom_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/new_group_button"
            android:layout_alignParentBottom="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/group_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_group_fab"
        android:src="@drawable/ic_plus_white_48dp"
        app:layout_anchor="@id/group_recycler_view"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_margin="16dp" />

</android.support.design.widget.CoordinatorLayout>