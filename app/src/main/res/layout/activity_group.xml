<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_section"
        tools:context=".GroupActivity" />

    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_transp_40"
        android:orientation="vertical"
        android:padding="6dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.compscieddy.meetinthemiddle.FontTextView
                android:id="@+id/group_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:hint="@string/hint_set_group_name"
                android:singleLine="true"
                android:textSize="18sp"
                android:visibility="visible"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/group_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textSize="18sp"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"/>

            <com.compscieddy.meetinthemiddle.FontTextView
                android:id="@+id/group_set_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="@string/set_group_title"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                app:fontface="montserrat_semibold"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/rounded_fill_set_group_title"
                android:visibility="invisible"/>

        </FrameLayout>


        <LinearLayout
            android:id="@+id/group_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                style="@style/MenuAvatarStyle"
                android:layout_width="@dimen/menu_avatar_size"
                android:layout_height="@dimen/menu_avatar_size"
                android:background="@drawable/circle_fill_grey"
                android:src="@drawable/ic_face_white_48dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                style="@style/MenuAvatarStyle"
                android:layout_width="@dimen/menu_avatar_size"
                android:layout_height="@dimen/menu_avatar_size"
                android:background="@drawable/circle_fill_grey"
                android:src="@drawable/ic_face_white_48dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                style="@style/MenuAvatarStyle"
                android:layout_width="@dimen/menu_avatar_size"
                android:layout_height="@dimen/menu_avatar_size"
                android:background="@drawable/circle_fill_grey"
                android:src="@drawable/ic_face_white_48dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/invite_button"
                style="@style/MenuAvatarStyle"
                android:layout_width="@dimen/menu_avatar_size"
                android:layout_height="@dimen/menu_avatar_size"
                android:background="@drawable/circle_fill_grey"
                android:src="@drawable/ic_plus_white_48dp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:padding="6dp">

        <LinearLayout
            android:id="@+id/comments_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/pictures_section"
            android:orientation="vertical">

            <com.compscieddy.meetinthemiddle.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discuss"
                android:textSize="11sp"
                android:layout_marginBottom="3dp"
                app:fontface="montserrat_semibold"
                android:textAllCaps="true" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/chats_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <com.compscieddy.meetinthemiddle.FontEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="10dp"
                    android:hint=" Say what..?"/>
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/circle_fill_send_button"
                    android:paddingTop="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_send_white_48dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pictures_section"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

